

<div class="container">
  <div class="row">
    <div class="col-xs-6 rev">
      <h3> <%= @cocktail.name %> </h3>
      <p> Here are all the  ingredients and doses : </p>
      <ul>
        <% @cocktail.doses.each do |l| %>
          <li> <%= l.description %> : <strong> <%= l.ingredient.name %> </strong>
          </li>
        <% end %>
      </ul>
      <br>
      <%= link_to 'Add a dose to the cocktail', new_cocktail_dose_path(@cocktail.id), class: "btn btn-success"  %>
      <br>
      <br>
      <%= link_to 'Add a review', new_cocktail_review_path(@cocktail.id) , class: "btn btn-primary" %>
      <br>
    </div>
    <div class="col-xs-6 rev">
      <%=  cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    </div>

    <%= link_to 'back', cocktails_path, class: "btn btn-danger" %>

      <% @cocktail.reviews.each do |l|   %>
        <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">

          <div class="card-product-infos new">
            <p> <%= l.content %> </p> grade : <strong> <%= l.rating %> </strong>
          </div>
        </div>
      <% end %>


    <div class="ecart">
    </div>
  </div>
</div>
