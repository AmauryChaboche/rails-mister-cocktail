<div class="container">
  <div class="row">
    <h1>Create Your own Cocktail !! </h1>
    <br>
    <div class="form">
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <br>
        <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
