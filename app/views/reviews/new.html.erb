<div class="container">
  <div class="row">
    <br>
    <div class="form">
      <%= simple_form_for [@cocktail, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
    <br>
    <%= link_to 'back', cocktail_path(@cocktail) , class: "btn btn-danger" %>
  </div>
</div>
